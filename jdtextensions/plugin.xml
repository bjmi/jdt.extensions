<?xml version="1.0" encoding="UTF-8"?>
<plugin>
  <extension
         point="org.eclipse.jdt.ui.javaElementFilters">
      <filter
            class="bjmi.jdt.extensions.filters.DeprecatedMembersFilter"
            description="%DeprecatedMembersFilter.description"
            id="bjmi.jdt.extensions.filters.DeprecatedMembersFilter"
            name="%DeprecatedMembersFilter.name">
      </filter>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonFilter
            activeByDefault="false"
            class="bjmi.jdt.extensions.filters.DeprecatedMembersFilter"
            description="%DeprecatedMembersFilter.description"
            id="bjmi.jdt.extensions.deprecatedMembersFilter"
            name="%DeprecatedMembersFilter.name">
      </commonFilter>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="bjmi.jdt.extensions.deprecatedMembersFilter">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerContentBinding
            viewerId="org.eclipse.jdt.ui.PackageExplorer">
         <includes>
            <contentExtension
                  pattern="bjmi.jdt.extensions.deprecatedMembersFilter">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="true"
            class="bjmi.jdt.extensions.decoratations.DeprecatedMembersLabelDecorator"
            id="bjmi.jdt.extensions.decorator"
            label="%DeprecatedMembersLabelDecorator.label"
            lightweight="true"
            state="true">
         <description>
            %DeprecatedMembersLabelDecorator.description
         </description>
         <enablement>
            <objectClass
                  name="org.eclipse.jdt.core.IMember">
            </objectClass>
         </enablement>
      </decorator>
   </extension>
</plugin>
